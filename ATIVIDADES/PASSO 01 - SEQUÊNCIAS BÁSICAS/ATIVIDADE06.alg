algoritmo "AIVIDADE06"
// Faça um programa que leia um número inteiro e mostre o seu antecessor e seu sucessor
var

NUMERO,ANT,SUC : INTEIRO

inicio

      escreva("Digite um valor: ")
      leia(NUMERO)
      
      ANT <- NUMERO-1
      SUC <- NUMERO +1
      
      escreva("O numero ", NUMERO, " possui o antecessor ",ANT, " e seu sucessor é: ", SUC)

fimalgoritmo
